<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Module05Exercise01.ViewModel"
             x:Class="Module05Exercise01.View.ViewEmployee"
             Title="View Employee"
             BackgroundColor="#f0f8ff">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Employee Information"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#2F4F4F"
                   HorizontalOptions="Center"
                   Margin="0, 20, 0, 10"/>

            <SearchBar Placeholder="Search by Name, Address, Email, or Contact"
                       Text="{Binding SearchText}"
                       BackgroundColor="White"
                       TextColor="Black"
                       PlaceholderColor="Gray"
                       HorizontalOptions="FillAndExpand"
                       Margin="0,0,0,10"/>

            <!-- ListView for Employee Details -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   HasShadow="True">
                <ListView ItemsSource="{Binding FilteredEmployeeList}"
                          HasUnevenRows="True"
                          SeparatorColor="#dcdcdc">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="10">
                                    <!-- Display Name -->
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#4682B4"/>
                                    <!-- Separator -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#dcdcdc"
                                             Margin="0, 5"/>

                                    <!-- Display Address with Icon -->
                                    <Label Text="ðŸ  Address:"
                                           FontAttributes="Italic"
                                           TextColor="#808080"/>
                                    <Label Text="{Binding Address}"
                                           FontSize="14"
                                           TextColor="#2F4F4F"/>
                                    <!-- Separator -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#dcdcdc"
                                             Margin="0, 5"/>

                                    <!-- Display Email with Icon -->
                                    <Label Text="ðŸ“§ Email:"
                                           FontAttributes="Italic"
                                           TextColor="#808080"/>
                                    <Label Text="{Binding Email}"
                                           FontSize="14"
                                           TextColor="#2F4F4F"/>
                                    <!-- Separator -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#dcdcdc"
                                             Margin="0, 5"/>

                                    <!-- Display Contact Number with Icon -->
                                    <Label Text="ðŸ“ž Contact Number:"
                                           FontAttributes="Italic"
                                           TextColor="#808080"/>
                                    <Label Text="{Binding ContactNo}"
                                           FontSize="14"
                                           TextColor="#2F4F4F"/>
                                    <!-- Separator -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#dcdcdc"
                                             Margin="0, 5"/>
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer
                                          Command="{Binding Source={RelativeSource AncestorType={x:Type local:EmployeeViewModel}},
                                           Path=SelectedEmployeeCommand}"
                                             CommandParameter="{Binding .}"/>
                                    </StackLayout.GestureRecognizers>

                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Frame>

            <!-- Load Data Button -->
            <Button Text="Load Data"
                    Command="{Binding LoadDataCommand}"
                    BackgroundColor="#32CD32"
                    TextColor="White"
                    CornerRadius="25"
                    Padding="10"
                    FontAttributes="Bold"
                    HorizontalOptions="Fill"/>

            <!-- Connection Status -->
            <Label x:Name="ConnectionStatusLabel"
                   Text="{Binding StatusMessage}"
                   FontSize="18"
                   TextColor="#4682B4"
                   HorizontalOptions="Center"
                   FontAttributes="Italic"
                   Margin="0, 20, 0, 0"/>

            <!-- Add New Employee Section -->
            <Label Text="Add/Modify Employee"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#4682B4"
                   Margin="0, 30, 0, 10"/>

            <Entry Placeholder="Name"
                   Text="{Binding NewEmployeeName}"
                   BackgroundColor="White"
                   TextColor="#333"
                   PlaceholderColor="#B0B0B0"
                   Margin="0, 5"/>

            <Entry Placeholder="Address"
                   Text="{Binding NewEmployeeAddress}"
                   BackgroundColor="White"
                   TextColor="#333"
                   PlaceholderColor="#B0B0B0"
                   Margin="0, 5"/>

            <Entry Placeholder="Email"
                   Text="{Binding NewEmployeeEmail}"
                   BackgroundColor="White"
                   TextColor="#333"
                   PlaceholderColor="#B0B0B0"
                   Margin="0, 5"/>

            <Entry Placeholder="Contact Number"
                   Text="{Binding NewEmployeeContactNo}"
                   BackgroundColor="White"
                   TextColor="#333"
                   PlaceholderColor="#B0B0B0"
                   Margin="0, 5"/>

            <!-- Add and Delete Buttons Section -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0, 20, 0, 0">
                <Button Text="Add Employee"
                        Command="{Binding AddEmployeeCommand}"
                        BackgroundColor="#32CD32"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        Padding="10, 5"/>
                
                <Button Text="Update Employee" 
                        Command="{Binding UpdateEmployeeCommand}" 
                        IsEnabled="{Binding IsEmployeeSelected}" 
                        BackgroundColor="#FF9800" 
                        FontAttributes="Bold"
                        TextColor="White"
                        CornerRadius="20"
                        Padding="10, 5"
                        Margin="10, 0, 0, 0"/>

                <Button Text="Delete Employee"
                        Command="{Binding DeleteEmployeeCommand}"
                        IsEnabled="{Binding IsEmployeeSelected}"
                        BackgroundColor="#E74C3C"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        Padding="10, 5"
                        Margin="10, 0, 0, 0"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
